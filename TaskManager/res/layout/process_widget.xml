<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_gaget_body"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/query_iv1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/img_leftselector" />

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2014-01" />

        <ImageView
            android:id="@+id/query_iv2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/img_rightselector" />
          <ImageView
            android:id="@+id/query_iv3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_add" />
            <ImageView
            android:id="@+id/query_iv4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_add_timeline" />
    </LinearLayout>

    <ListView
        android:id="@+id/wd_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>